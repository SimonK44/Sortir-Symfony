{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des utilisateurs</h1>

    <table class="table table-striped table-sm table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Pseudo</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Email vérifié</th>
            <!-- Si Email == vérifié ==> vérifié (vert), sinon ==> non vérifié (rouge) -->
            <th>Site associé</th>
            <th>Photo</th>
            <th>Rôle</th>
            <!-- Si rôle == utilisateur -->
            <th>Statut</th>
            <!-- Si actif, afficher un bouton "Désactiver", sinon afficher "Activer" -->
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.telephone }}</td>

                <!-- Affichage de l'état de vérification de l'email avec une couleur -->
                <td>
                    {% if user.isVerified %}
                        <span class="badge bg-success">Vérifié</span>
                    {% else %}
                        <span class="badge bg-danger">Non vérifié</span>
                    {% endif %}
                </td>

                <!-- Affichage du nom du site associé -->
                <td>{{ user.site.nomSite }}</td>

                <!-- Affichage de la photo de l'utilisateur (vérifie que userPhoto existe) -->
                <td>
                    {% if user.userPhoto %}
                        <img src="{{ asset('uploads/photos/' ~ user.userPhoto) }}" alt="Photo de {{ user.pseudo }}" class="img-thumbnail" width="50">
                    {% else %}
                        <span>Aucune photo</span>
                    {% endif %}
                </td>

                <!-- Affichage des rôles (il faut itérer car c'est un tableau) -->
                <td>
                    {% for role in user.roles %}
                        {{ role }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>

                <!-- Bouton pour activer ou désactiver l'utilisateur en fonction de son statut -->
                <td>
                    {% if user.actif %}
                        <a href="#" class="btn btn-warning btn-sm">Désactiver</a>
                    {% else %}
                        <a href="#" class="btn btn-success btn-sm">Activer</a>
                    {% endif %}
                </td>

                <!-- Lien pour supprimer l'utilisateur -->
                <td>
                {% if user.actif %}
                     <a class="btn btn-danger btn-sm" href="{{ path('app_users_delete',{'id':user.id}) }}">Activer</a>
                {% else %}
                     <a class="btn btn-danger btn-sm" href="{{ path('app_users_delete',{'id':user.id}) }}">Désactiver</a>
                {% endif %}
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
