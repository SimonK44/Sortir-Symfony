<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sortir.com{% endblock %}</title>
    <link rel="icon" href="{{  asset('images/sortirFavicon.png') }}">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" defer></script>
        <script src="{{ asset('filtre_sortie.js') }}" defer></script>
    {% endblock %}
</head>
<body>
    <header>
            <a href="{{ path('app_home') }}"><img class="logoPosition"  src="{{  asset('images/sortirLogo.png') }}"></a>
            <nav class="position">
                 <ul>
    {#              <li style="padding:5px;"><a href="{{ path('app_home') }}">Accueil</a></li>#}
                     {% if is_granted('IS_AUTHENTICATED') %}
                         <li class="login_authenticated"><a href="{{ path('app_sorties_index') }}">Sorties</a></li>
                         <li class="login_authenticated"><a href="{{ path('app_villes_index') }}">Ville</a></li>
                         <li class="login_authenticated"><a href="{{ path('app_sites_index') }}">Site</a></li>
                         {%if is_granted('ROLE_ADMIN') %}
                         <li class="login_authenticated"><a href="{{ path('app_users') }}">Utilisateurs</a></li>
                         {% endif %}
                         <li class="login_authenticated"><a href="{{ path('app_profil') }}"> Profil</a></li>
                         <li class="login_authenticated"><a href="{{ path('app_logout') }}"> Déconnecter</a></li>
                         {% else %}
                            <!-- <img class="gif2"  src="{{  asset('images/clavier.gif') }}">
                             <img class="gif"  src="{{  asset('images/fleche.gif') }}">
                             -->
                             <li class="login"><a href="{{ path('app_login') }}">Login</a></li>
                     {% endif %}
                </ul>
            </nav>
            <div class="divblue"></div>
            <img class="img_main" src="{{  asset('images/header.png') }}">
    </header>
    <br>
    <main>
         <div class="text-success">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                <div class = "alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}

        </div>
        {% block body %}{% endblock %}
    </main>
    <div class="footer_parent">
        <footer>
            <p> © 2024 ENI</p>
        </footer>
    </div>
</body>
</html>
