{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}


    <h1>Mon Profil</h1>
    {% if(user.userphoto)%}
        <img class="userPhoto" src="{{ asset('uploads/userPhoto/' ~user.userPhoto) }}" alt="userPhoto">
    {% elseif user.id is divisible by(2) %}
        <img class="userPhoto" src="{{ asset('images/pingouin.png') }}" alt="userPhoto">
    {% else %}
        <img class="userPhoto" src="{{ asset('images/poule.png') }}" alt="userPhoto">
    {% endif %}


    <table class="table">
        <tbody>
            <tr>
                <th> pseudo </th>
                <td> {{ user.pseudo }} </td>
            </tr>
            <tr>
                <th>prenom</th>
                <td> {{ user.prenom }} </td>
            </tr>
            <tr>
                <th>nom</th>
                <td> {{ user.nom }} </td>
            </tr>
            <tr>
                <th>telephone</th>
                <td> {{ user.telephone }} </td>
            </tr>
            <tr>
                <th>email</th>
                <td> {{ user.email }} </td>
            </tr>
            <tr>
                <th>site de rattachement</th>
                <td>  {{ user.site.nomSite }} </td>
            </tr>
        </tbody>
    </table>

    {% if(app.user.id == user.id) %}
        <a class="button-vert" href="{{ path('app_profil_modification') }}"> Editer </a>
    {% endif %}

    <br>
    <br>

{% endblock %}
