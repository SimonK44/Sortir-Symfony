{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>

        {% endif %}

        <h1 class="mb-3">Login</h1>
        <label for="username" class="mb-2">Email or Pseudo </label>
        <input type="text" value="{{ last_username }}" name="_username" id="username" autocomplete="current-username" class="form-control modif-width" required autofocus>

        <label for="password" class="mb-2 mt-3">Password</label>
        <input type="password" name="_password" id="password" class="form-control modif-width" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
        #}

        <div class="checkbox mb-3 mt-2">
            <input type="checkbox" name="_remember_me" id="_remember_me">
            <label for="_remember_me">Remember me</label>
        </div>

        <button class="button-vert" type="submit">
            Connexion
        </button>

    </form>
    <a href="{{ path('app_forgot_password_request') }}" class="mb-5">Mot de passe oubli√©</a>
{% endblock %}
