{% extends 'base.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block body %}
    <h1>Sorties</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sortie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sortie.nom }}</td>
            </tr>
            <tr>
                <th>Date début sortie</th>
                <td>{{ sortie.dateDebut ? sortie.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Durée de la sortie</th>
                <td>{{ sortie.duree }}</td>
            </tr>
            <tr>
                <th>Date cloture de la sortie</th>
                <td>{{ sortie.dateCloture ? sortie.dateCloture|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre maximum de participant</th>
                <td>{{ sortie.nbInscriptionsMax }}</td>
            </tr>
            <tr>
                <th>Description de la sortie</th>
                <td>{{ sortie.descriptionInfos }}</td>
            </tr>
            <tr>
                <th>Etat de la sortie</th>
                <td>{{ sortie.etatSortie }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ sortie.urlPhoto }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sorties_index') }}">back to list</a>

    <a href="{{ path('app_sorties_edit', {'id': sortie.id}) }}">edit</a>

    {{ include('sorties/_delete_form.html.twig') }}
{% endblock %}
