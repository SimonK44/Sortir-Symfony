{% extends 'base.html.twig' %}

{% block title %}Sorties index{% endblock %}

{% block body %}
    <h1>Liste des sorties</h1>
    <br>

    <table class="table table-striped table-sm table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>NÂ° sortie</th>
                <th>Nom</th>
                <th>Debut de la sortie</th>
                <th>Duree de la sortie</th>
                <th>Date de fin de la sortie</th>
                <th>Nombre maximum de participant</th>
                <th>Description de la sortie</th>
                <th>Etat de la sortie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td><a class="btn btn-outline-info btn-sm" href="{{ path('app_sorties_show', {'id': sortie.id}) }}">{{ sortie.id }}</td>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateDebut ? sortie.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.duree }}</td>
                <td>{{ sortie.dateCloture ? sortie.dateCloture|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.descriptionInfos }}</td>
                <td>{{ sortie.etatSortie }}</td>
                <td>
                    <a class="btn btn-outline-info btn-sm" href="{{ path('app_sorties_edit', {'id': sortie.id}) }}">MAJ sortie</a>
                    <a class="btn btn-outline-danger btn-sm" href="{{ path('app_sorties_delete', {'id': sortie.id}) }}">&#x1F5D1;</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Pas de sortie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-info btn-sm" href="{{ path('app_sorties_new') }}">Creation sortie</a>
{% endblock %}
